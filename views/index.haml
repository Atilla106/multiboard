!!!
%html
  %head
    %title eistv dashboard

  %script{ :src => "https://api.tiles.mapbox.com/mapbox.js/v2.1.9/mapbox.js" }
  %link{ :href => "https://api.tiles.mapbox.com/mapbox.js/v2.1.9/mapbox.css", :rel => "stylesheet" }

  %body
    :css
      body {
        padding: 0px;
        margin: 0px;
        height: 100vh;
      }

      header {
        width: 100%;
        height: 5vh;
        background-color: rgb(33, 150, 243);
      }

      #map-header {
        position: absolute;
        top: 3vh;
        bottom: 0px;
        width: 25%;
        height: 5vh;
      }

      #map {
        position: absolute;
        top: 10vh;
        bottom: 0px;
        left: 0px;
        width: 25%;
        height: 90vh;
      }

      #rer {
        position: absolute;
        top: 5vh;
        left: 25%;
        width: 25%;
      }

      #rer-footer {
        position: absolute;
        top: 93vh;
        left: 25%;
        bottom: 0px;
        width: 25%;
        height: 5vh;
      }

      #meteo-header {
        position: absolute;
        top: 3vh;
        left: 50%;
        bottom: 0px;
        width: 25%;
        height: 5vh;
      }

      #meteo {
        position: absolute;
        top: 10vh;
        left: 50%;
        width: 25%;
      }

      #meteo-icon {
        display: block;
        margin-left: auto;
        margin-right: auto;
      }

      #meteo-temperature {
        text-align: center;
        font-family: Blender, Helvetica Neue, Helvetica, Arial, sans-serif;
        color: rgb(33, 150, 243);
        font-size: 8vh;
      }

      #meteo-minmax {
        margin-left: 20%;
        margin-right: 20%;
      }

      #meteo-min {
        float: left;
        font-family: Blender, Helvetica Neue, Helvetica, Arial, sans-serif;
        color: rgb(33, 150, 243);
        font-size: 2vh;
      }

      #meteo-max {
        float: right;
        font-family: Blender, Helvetica Neue, Helvetica, Arial, sans-serif;
        color: rgb(33, 150, 243);
        font-size: 2vh;
      }

    %header
      coucou

    #map-header
      %h1 Carte

    #map

    #rer

    #rer-footer
      %h1 RER depuis Cergy Préfecture

    #meteo-header
      %h1 Météo

    #meteo
      %div
        %img{ :id => "meteo-icon", :src => @weather.weather_icon }
      #meteo-temperature #{@weather.temperature}°
      #meteo-minmax
        %span#meteo-min
          min. #{@weather.min_temperature}°
        %span#meteo-max
          max. #{@weather.max_temperature}°

    :javascript
      L.mapbox.accessToken = 'pk.eyJ1IjoiZmxhdnIiLCJhIjoiZWFkYmQ2YTEzZDRhNDg1MmM2ZDYwZjBiNzkxMzRlODIifQ.hVVth3HEgVYI4wyaWw9BQg';
      var map = L.mapbox.map('map', 'mapbox.streets', { zoomControl: false }).setView([49.035048, 2.070478], 15);

      L.marker([49.035048, 2.070], {
          icon: L.mapbox.marker.icon({
              'marker-size': 'large',
              'marker-symbol': 'building',
              'marker-color': '#73B1F9'
          })
      }).addTo(map);

      L.marker([49.036182, 2.080174], {
          icon: L.mapbox.marker.icon({
              'marker-size': 'large',
              'marker-symbol': 'rail',
              'marker-color': '#AF3535'
          })
      }).addTo(map);

      L.marker([49.0421646, 2.0712809], {
          icon: L.mapbox.marker.icon({
              'marker-size': 'large',
              'marker-symbol': 'fast-food',
              'marker-color': '#FFBA5E'
          })
      }).addTo(map);

      L.marker([49.0312, 2.0613], {
          icon: L.mapbox.marker.icon({
              'marker-size': 'large',
              'marker-symbol': 'restaurant',
              'marker-color': '#00AAFF'
          })
      }).addTo(map);
