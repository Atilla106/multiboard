%html
  %head
    %title eistv dashboard

  %script{ :src => "https://api.tiles.mapbox.com/mapbox.js/v2.1.9/mapbox.js" }
  %link{ :href => "https://api.tiles.mapbox.com/mapbox.js/v2.1.9/mapbox.css", :rel => "stylesheet" }

  %body
    :css
      body {
        padding: 0px;
        margin: 0px;
        height: 100vh;
      }

      header {
        width: 100%;
        height: 5vh;
        background-color: rgb(115, 177, 249);
      }

      #map-header {
        position: absolute;
        top: 3vh;
        bottom: 0px;
        width: 25%;
        height: 5vh;
      }

      #map {
        position: absolute;
        top: 10vh;
        bottom: 0px;
        left: 0px;
        width: 25%;
        height: 90vh;
      }

      #rer {
        position: absolute;
        top: 5vh;
        bottom: 0px;
        left: 25%;
        border-bottom: 90vh solid rgba(194, 194, 194, 0.35);
        border-right: 15vh solid transparent;
        height: 0px;
        width: 20%;
      }

      #rer-footer {
        position: absolute;
        top: 93vh;
        left: 25%;
        bottom: 0px;
        width: 25%;
        height: 5vh;
      }

      #meteo-header {
        position: absolute;
        top: 3vh;
        left: 50%;
        bottom: 0px;
        width: 25%;
        height: 5vh;
      }

      #meteo {
        position: absolute;
        top: 10vh;
        left: 45.44%;
        border-top: 90vh solid rgba(150, 150, 150, 0.23);
        border-right: 15vh solid transparent;
        border-left: 15vh solid transparent;
        height: 0px;
        width: 20%;
      }

